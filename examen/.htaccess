# Activar el motor de reescritura
RewriteEngine On

# Permitir acceso a AuthController.php
RewriteCond %{REQUEST_URI} ^/unidad4/examen/app/AuthController\.php$ [NC]
RewriteRule ^ app/AuthController.php [L]

# Redirigir la ra√≠z de /unidad4/examen/ hacia index.php
RewriteCond %{REQUEST_URI} ^/unidad4/examen/$ [NC]
RewriteRule ^ index.php [L]

# Permitir acceso directo a archivos existentes
RewriteCond %{REQUEST_FILENAME} -f
RewriteRule ^ - [L]

# Manejo de errores
ErrorDocument 404 /unidad4/examen/index.php
